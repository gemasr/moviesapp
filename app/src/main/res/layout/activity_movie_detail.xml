<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="20dp">


    <ImageView
        android:id="@+id/detail_movie_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>


    <TextView
        android:id="@+id/detail_movie_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="Film title"
        app:layout_constraintTop_toBottomOf="@id/detail_movie_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/detail_movie_average_votes"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        />


    <TextView
        android:id="@+id/detail_movie_average_votes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="7.7/10"
        app:layout_constraintTop_toBottomOf="@id/detail_movie_image"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"
        android:textColor="@color/white"
        />


    <TextView
        android:id="@+id/detail_movie_release_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/detail_movie_title"
        app:layout_constraintLeft_toLeftOf="@id/detail_movie_title"
        android:paddingLeft="10dp"
        android:textSize="14dp"
        android:text="2018"
        />


    <TextView
        android:id="@+id/detail_movie_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/detail_movie_release_year"
        app:layout_constraintLeft_toLeftOf="@id/detail_movie_release_year"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="30dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam porttitor felis erat, vitae consequat dolor hendrerit ut. Ut a leo eu dui fringilla condimentum et et nibh. Cras elementum faucibus nisi at finibus. Curabitur mi lacus, tincidunt semper ipsum at, fringilla accumsan nulla. Pellentesque a ullamcorper purus, nec ornare dolor. Suspendisse luctus in massa eget euismod. Curabitur sed turpis leo. Maecenas finibus quis dui vitae ultrices. Morbi in odio eu ante ornare aliquet. Sed dignissim nisi eu dui pretium volutpat."
        />




</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>